<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="SimplePay" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>dk.apaq.simplepay.model.BaseEvent</class>
    <class>dk.apaq.simplepay.model.Merchant</class>
    <class>dk.apaq.simplepay.model.Transaction</class>
    <class>dk.apaq.simplepay.model.SystemUser</class>
    <class>dk.apaq.simplepay.model.TransactionEvent</class>
    <class>dk.apaq.simplepay.model.Token</class>
    <class>dk.apaq.simplepay.model.TokenEvent</class>
    <class>dk.apaq.simplepay.model.PaymentGatewayAccess</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <mapping-file>orm.xml</mapping-file>
  </persistence-unit>
</persistence>
